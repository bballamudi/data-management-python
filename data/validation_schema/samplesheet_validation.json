{
     "id": "https://github.com/imperial-genomics-facility/data-management-python/samplesheet_schema#",
     "$schema": "http://json-schema.org/draft-06/schema#",
     "description": "schema for validation of samplesheet data",
     "version": "1.0",
     "type" : "array",
     "minItems": 1,
     "uniqueItems": True,
     "items": { 
         "type": "object",
         "properties" : {
           "Lane" : {
               "type" : "string",
               "enum" : ["1", "2", "3","4","5","6","7","8"]
           },
           "Sample_ID" : {
               "type" : "string",
               "pattern": "^IGF[a-zA-Z0-9-_]+$",
           },
           "Sample_Name":{
               "type" : "string",
               "pattern": "^[a-zA-Z0-9-]+$",
           },
           "Sample_Project":{
               "type" : "string",
               "pattern": "^IGF[a-zA-Z0-9-_]+$",
           },
           "I7_Index_ID":{
               "type" : "string",
           },
           "index":{
               "type" : "string",
               "pattern":"^[ATCG]+$|^SI-GA-[A-Z][0-9]+$",
           },
           "I5_Index_ID":{
               "type" : "string",
           },
           "index2":{
               "type" : "string",
               "pattern":"^[ATCG]+$|^$",
           },
           "Sample_Plate":{
               "type" : "string",
           },
           "Sample_Well": {
               "type" : "string",
           },
           "Description":{
               "type" : "string",
               "pattern" : "^10X$|^$",
           },
         },  
         "required": ["Sample_ID","Sample_Name","Sample_Project","I7_Index_ID","index"]
     },
  }